@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .about-us {
            background-color: #f9f9f9;
            padding: 50px 0;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .about-content {
            flex: 1;
            padding: 20px;
        }

        .image-container {
            flex: 1;
            padding: 20px;
        }

            .image-container img {
                max-width: 100%;
                height: auto;
                display: block;
                border-radius: 8px;
            }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        ul.link-list {
            list-style: none;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .link-item {
            width: 80%;
            margin-bottom: 10px;
        }

            .link-item a {
                display: block;
                text-decoration: none;
                color: #333;
            }

            .link-item img {
                width: 318px;
                height: 159px;
                object-fit: cover;
                border-radius: 8px;
                margin-bottom: 5px;
            }

        .btn-submit {
            background-color: black; /* Black background */
            color: grey; /* Grey text */
            border: 2px solid grey; /* Grey border */
            padding: 10px 20px; /* Padding for the button */
            font-size: 16px; /* Font size */
            cursor: pointer; /* Cursor to pointer on hover */
        }

            .btn-submit:hover {
                background-color: grey; /* Grey background on hover */
                color: black; /* Black text on hover */
            }
    </style>
</head>


    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="contact-form">
                        <h2>Contact Information</h2>
                        <p>If you have any questions or inquiries, feel free to reach out to us using the information below:</p>
                        <ul>
                            <li>Email: info@khumalohandcrafts.com</li>
                            <li>Phone: 012-457-9954</li>
                            <li>Address: 61 Plein Street Sunnyside, Pretoria</li>
                        </ul>
                <h2>Contact Us</h2>
                <form>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number">
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="Enter your message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
